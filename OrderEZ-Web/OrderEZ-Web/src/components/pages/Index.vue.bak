<template>
    <div id="app">
        <aside class="sidebar">
            <h2>管理系统</h2>
            <ul>
                <li :class="{ active: currentPage === 'userManagement' }" @click="changePage('userManagement')">
                    用户管理
                </li>
                <li :class="{ active: currentPage === 'goodManagement' }" @click="changePage('goodManagement')">
                    商品管理
                </li>
            </ul>
            <button @click="logoutHandler">退出登录</button>
        </aside>
        <main class="content">
            <div class="card">
                <component :is="currentPage"></component>
            </div>
        </main>
    </div>
</template>

<script setup>
import {onMounted, ref} from 'vue';
import axiosInstance from "@/utils/axiosInstance.js";
import axios from "axios";

const currentPage = ref('');
const errorMessage = ref('');

const changePage = (page) => {
    currentPage.value = page;
    localStorage.setItem('currentPage', page);
};

const logoutHandler = () => {
    logout();
    localStorage.removeItem('currentPage');
};



onMounted(() => {
    const storedPage = localStorage.getItem('currentPage');
    if (storedPage) {
        currentPage.value = storedPage;
    } else {
        // 如果没有存储的页面状态，默认显示用户管理页面
        currentPage.value = 'userManagement';
    }
});
</script>

